		<ee:transform doc:name="Transform Message" doc:id="3ab45626-33a9-4d79-a7f9-c0d9d980ad58" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/java
---
payload map (item) -> {
  Name: item.Name
  }]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<salesforce:create type="Account" doc:name="Create" doc:id="8b1ab61d-4c3f-4129-9d30-dd6efcf7e7d7" config-ref="Salesforce_Config"/>
