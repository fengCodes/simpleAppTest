	<salesforce:sfdc-config name="Salesforce_Config" doc:name="Salesforce Config" doc:id="194bfe38-0223-41c7-a455-b9652ac2b15d" >
		<salesforce:basic-connection username="${salesforce.username}" password="${salesforce.password}" />
	</salesforce:sfdc-config>
